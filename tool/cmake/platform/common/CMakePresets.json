{
	"version": 6,
	"configurePresets": [
		{
			"name": "default",
			"hidden": true,
			"description": "Base preset for configurations",
			"generator": "Ninja Multi-Config",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_CONFIGURATION_TYPES": {
					"type": "STRING",
					"value": "Debug;Development;Release"
				}
			}
		}
	],
	"buildPresets": [
		{
			"name": "default",
			"hidden": true
		}
	],
	"testPresets": [
		{
			"name": "default",
			"hidden": true,
			"output": {
				"outputOnFailure": true,
				"shortProgress": true,
				"debug": true,
				"verbosity": "verbose"
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": true
			}
		}
	]
}

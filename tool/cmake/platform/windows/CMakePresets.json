{
	"version": 6,
	"include": [
		"../common/CMakePresets.json"
	],
	"configurePresets": [
		{
			"name": "windows-default",
			"inherits": [
				"default"
			],
			"hidden": true,
			"description": "Base preset for Windows configurations",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "windows-ninja-msvc",
			"displayName": "Ninja - MSVC",
			"description": "Default configuration using Ninja Multi-Config generator and the Microsoft Visual C++ compiler",
			"architecture": {
				"strategy": "external"
			},
			"inherits": [
				"windows-default"
			]
		},
		{
			"name": "windows-msbuild-msvc",
			"displayName": "MSBuild - MSVC",
			"description": "Default configuration using MSBuild and the Microsoft Visual C++ compiler",
			"generator": "Visual Studio 17 2022",
			"architecture": {
				"strategy": "set"
			},
			"inherits": [
				"windows-default"
			]
		},
		{
			"name": "windows-ninja-clang",
			"displayName": "Ninja - Clang",
			"description": "Default configuration using Ninja Multi-Config generator and Clang",
			"architecture": {
				"strategy": "external"
			},
			"inherits": [
				"windows-default"
			],
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "clang-cl"
			},
			"toolset": "ClangCL"
		},
		{
			"name": "windows-msbuild-clang",
			"displayName": "MSBuild - Clang",
			"description": "Default configuration using MSBuild and Clang",
			"generator": "Visual Studio 17 2022",
			"architecture": {
				"strategy": "set"
			},
			"inherits": [
				"windows-default"
			],
			"toolset": "ClangCL"
		}
	],
	"buildPresets": [
		{
			"name": "windows-default",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "windows-msbuild-msvc-release",
			"displayName": "Release",
			"configurePreset": "windows-msbuild-msvc",
			"configuration": "Release",
			"inherits": [
				"windows-default"
			]
		},
		{
			"name": "windows-msbuild-msvc-development",
			"displayName": "Development",
			"configurePreset": "windows-msbuild-msvc",
			"configuration": "Development",
			"inherits": [
				"windows-default"
			]
		},
		{
			"name": "windows-msbuild-msvc-debug",
			"displayName": "Debug",
			"configurePreset": "windows-msbuild-msvc",
			"configuration": "Debug",
			"inherits": [
				"windows-default"
			]
		}
	],
	"testPresets": [
		{
			"name": "windows-default",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"inherits": [
				"default"
			]
		},
		{
			"name": "windows-msbuild-msvc-test",
			"displayName": "Test",
			"configurePreset": "windows-msbuild-msvc",
			"inherits": [
				"windows-default"
			]
		}
	]
}